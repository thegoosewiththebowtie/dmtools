<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>
    <Style Selector="TextBlock.Text0">
        <Setter Property="FontSize" Value="12"></Setter>
    </Style>
    <Style Selector="TextBlock.Text1">
        <Setter Property="FontSize" Value="14"></Setter>
    </Style>
    <Style Selector="TextBlock.Text2">
        <Setter Property="FontSize" Value="16"></Setter>
    </Style>
    <Style Selector="TextBlock.Text3">
        <Setter Property="FontSize" Value="20"></Setter>
    </Style>
    <Style Selector="TextBlock.Text4">
        <Setter Property="FontSize" Value="22"></Setter>
    </Style>
    <Style Selector="TextBlock.Text5">
        <Setter Property="FontSize" Value="24"></Setter>
    </Style>
    <Style Selector="TextBlock.Number">
        <Setter Property="FontSize" Value="30"></Setter>
    </Style>
    <Style Selector="Border.DefBorder">
        <Setter Property="BorderBrush" Value="DimGray"></Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
        <Setter Property="CornerRadius" Value="5"></Setter>
        <Setter Property="Margin" Value="5"></Setter>
    </Style>
</Styles>
