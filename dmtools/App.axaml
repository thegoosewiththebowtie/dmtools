<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:reactiveUi="clr-namespace:ReactiveUI;assembly=ReactiveUI"
             x:Class="dmtools.App"
             xmlns:local="clr-namespace:dmtools"
             RequestedThemeVariant="Light">
	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Locals/en.axaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
	<Application.Styles>
        <FluentTheme DensityStyle="Normal" />
        <StyleInclude Source="Templates/Templates.axaml"></StyleInclude>
    </Application.Styles>
</Application>
